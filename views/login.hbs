
<div class="container d-flex justify-content-center">
  <div>
    {{#if wrongcredentials}}
      <p>Invalid credentials</p>
    {{/if}}

    <form action="/login" method="POST">
      <label for="email">Email</label><br>
      <input class="btn-block" id="email" type="text" name="email" placeholder="email">
    
      <label for="password">Password</label><br>
      <input class="btn-block" id="password" type="password" name="password" placeholder="password">
  
      <button type="submit" class="btn btn-outline-dark btn-block">Login</button>
    
      <p class="d-flex justify-content-center">- or -</p>
      <button class="btn btn-outline-dark btn-block"><a href="/register">Sign Up</a></button>
    </form>
  </div>

  <div class="logo">
    <img  src="/images/logo.png" alt="name and logo">
    <h1>task'em</h1>
  </div>

  

</div>
