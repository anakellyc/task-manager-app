
  
  <div class="container d-flex justify-content-center">
    <div class="register">
      <h1>Sign up and become a pro in management!</h1>
 
      <br>
        {{#if existingEmail}}
        <p>Account already registered</p>
        {{else if unequalPassword}}
        <p>Passwords don't match</p>
        {{/if}}
      <br>
    </div>

    <div class="register">
      <form action="register" method="POST" enctype="multipart/form-data">
          <label>Upload your photo</label><br>
          <input type="text" name="name" placeholder="photo">
          <input class="" type="file" name="photo">
        
          <label for="firstName">Name</label><br>
          <input class="btn-block" type="text" name="firstName" placeholder="name">
        
          <label for="lastName">Surname</label><br>
          <input class="btn-block" type="text" name="lastName" placeholder="surname">
        
          <label for="email">Email</label><br>
          <input class="btn-block" type="text" name="email" placeholder="email">
        
          <label for="password">Password</label><br>
          <input class="btn-block" type="password" name="password" placeholder="password">
          
          <label for="confpassword">Confirm Password</label>
          <input class="btn-block" type="password" name="confpassword" placeholder="confirm password">
        

        <input class="btn btn-outline-dark btn-block" type="submit" value="Create">
      </form>
    </div>  

</div>